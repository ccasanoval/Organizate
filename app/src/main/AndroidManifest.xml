<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.cesoftware.cestodo1"
		  xmlns:android="http://schemas.android.com/apk/res/android">

	<application
		android:name="com.orm.SugarApp"
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">
		<meta-data
			android:name="DATABASE"
			android:value="cestodo.db"/>
		<meta-data
			android:name="VERSION"
			android:value="1"/>
		<meta-data
			android:name="QUERY_LOG"
			android:value="true"/>
		<meta-data
			android:name="DOMAIN_PACKAGE_NAME"
			android:value="com.cesoftware.cestodo1"/>

		<activity android:name=".MainActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name=".ActEdit"
			android:label="@string/editar"
			android:theme="@style/AppTheme.NoActionBar">
		</activity>

		<receiver android:name="CesWidgetProvider" >
			<intent-filter >
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
				<action android:name="com.cesoftware.cestodo1.CesWidgetProvider.ACTION_WIDGET_SHOWAPP"/>
        	</intent-filter>
			<meta-data android:name="android.appwidget.provider" android:resource="@xml/widget_info" />
		</receiver>
		<service android:name=".UpdateWidgetService"></service>
	</application>

</manifest>
