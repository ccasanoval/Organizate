	<LinearLayout
		android:id="@+id/layMes"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<Button
			android:id="@+id/btnMes"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="2dp"
			android:text="@string/mes"
			/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/layMes2"
		android:layout_below="@+id/layMes"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal" />

	<LinearLayout
		android:id="@+id/layDiaMes"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/layMes2"
		android:orientation="horizontal">
		<Button
			android:id="@+id/btnDiaMes"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="2dp"
			android:text="@string/dia_mes"
			/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/layDiaMes2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/layMes"
		android:orientation="horizontal" />

	<LinearLayout
		android:id="@+id/layDiaSemana"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/layDiaMes2"
		android:orientation="horizontal">
		<Button
			android:id="@+id/btnDiaSemana"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="2dp"
			android:text="@string/dia_semana"
			/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/layDiaSemana2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/layDiaSemana"
		android:orientation="horizontal" />

	<LinearLayout
		android:id="@+id/layHora"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/layDiaSemana2"
		android:orientation="horizontal">
		<Button
			android:id="@+id/btnHora"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="2dp"
			android:text="@string/hora"
			/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/layHora2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/layHora"
		android:orientation="horizontal" />

	<LinearLayout
		android:id="@+id/layMinuto"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/layHora2"
		android:orientation="horizontal">
		<Button
			android:id="@+id/btnMinuto"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="2dp"
			android:text="@string/minuto"
			/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/layMinuto2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/layMinuto"
		android:orientation="horizontal" />

</RelativeLayout>
